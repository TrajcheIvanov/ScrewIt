@model ScrewIt.ViewModels.SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
}

<div class="container-fluid">
    <div class="col-sm-4 offset-0">
        <h1 class="text-white">Sign Up</h1>
        <form asp-action="SignUp" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-warning"></div>
            <div class="form-group row">
                <label class="col-md-4 text-white font-weight-normal text-right" asp-for="Name"></label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 text-white font-weight-normal text-right" asp-for="Surname"></label>
                <div class="col-md-8">
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 text-white font-weight-normal text-right" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 text-white font-weight-normal text-right" asp-for="Password"></label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 text-white font-weight-normal text-right" asp-for="ConfirmPassword"></label>
                <div class="col-md-8">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="cold-md-8 offset-md-4">
                    <input type="submit" value="Register" class="btn btn-lg btn-success" />
                </div>
            </div>

            <p class="col-md-8 offset-md-4">
                <a asp-action="SignIn" class="text-white">Sign In</a>
            </p>
        </form>
    </div>
</div>
