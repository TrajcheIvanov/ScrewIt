@model ScrewIt.ViewModels.SignInViewModel

@{
    ViewData["Title"] = "SignIn";
}

<div class="container-fluid">
    <div class="col-sm-4 offset-0">
        <h1 class="text-white">Sign In</h1>
        <form asp-action="SignIn" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-warning"></div>
            <div class="form-group row">
                <label class="col-md-4 text-white font-weight-normal text-right" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 text-white font-weight-normal text-right" asp-for="Password"></label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group">
                <div class=" col-md-8 offset-md-4 checkbox">
                    <label asp-for="RememberMe" class="pr-4 pl-0">
                        <input asp-for="RememberMe" />
                    </label>
                    <span class="text-white">Remember me?</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 offset-md-4">
                    <input type="submit" value="Sign In" class="btn btn-success btn-lg" />
                </div>
            </div>
            <p class="col-md-8 offset-md-4">
                <a asp-action="SignUp" class="text-white">Sign Up</a>
            </p>
        </form>
    </div>
</div>