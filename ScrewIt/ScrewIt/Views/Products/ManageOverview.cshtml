@model IEnumerable<ScrewIt.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Manage Products & Services Overview";
}

<h1 class="text-white">Manage Products & Services</h1>
<div class="container">
    <div class="col col-md-10 offset-1">
        <div class="row">
            <div class="col p-3 d-flex justify-content-between">
                <a class="btn btn-success btn-lg" asp-area="" asp-controller="Products" asp-action="Create">Create New Product <i class="fas fa-plus-circle"></i></a>
            </div>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger col-md-6" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success col-md-6" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }
    </div>
</div>
<table class="table table-dark table-striped table-sm  table-responsive-sm col-md-8 offset-md-2">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.MeasureUnit)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ProductType)</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="usersList">
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.Price
                </td>
                <td>
                    @product.MeasureUnit
                </td>
                <td>
                    @product.ProductType
                </td>
               
                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a type="button" class="btn-sm btn-info" href="/Products/Edit/@product.Id">Edit</a>
                        <a type="button" class="btn-sm btn-danger" href="/Products/Delete/@product.Id" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>